		{
			"name": "API List of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//Get list of books\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"//Store result in an object to use\r",
							"const response = pm.response.json();\r",
							"\r",
							"//Base on non-fiction type result, store available non-fiction books\r",
							"const nonFiction = response.filter((book) => book.available === true);\r",
							"\r",
							"//Store result in an object to use\r",
							"const book = nonFiction;\r",
							"\r",
							"//Make sure the list have element\r",
							"pm.test(\"Books have been found\",() => {\r",
							"    pm.expect(book).not.empty;\r",
							"})\r",
							"\r",
							"\r",
							"\r",
							"//View first element of the array\r",
							"console.log(nonFiction[0].name);\r",
							"\r",
							"//Set variable global ID \r",
							"pm.globals.set(\"bookID\", nonFiction[0].id);\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/books?type=non-fiction",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						},
						{
							"key": "limit",
							"value": "12",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
